{% extends 'base.html.twig' %}
{% block body %}
	<div class="jumbotron text-center mt-4">
		<h3>
			hello les gens</h3>
	</div>
	<div class="container">
		<h3>vos derniers biens</h3>
		<div class="row-flex">
	{% for property in properties %}
		<div class="col-3">
			<div class="card">
				<div class="card-body">
					<div class="card-title">
						<h5><a href="{{path('property.show',{id : property.id, slug: property.slug })}}">{{property.title}}</a></h5>
					</div>
					<div class="card-text">
						<p>{{property.city}} {{property.post}}</p>
					</div>
					<div class="text-primary fw-bold p-2 fs-2">{{property.formattedprice()}}$</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
